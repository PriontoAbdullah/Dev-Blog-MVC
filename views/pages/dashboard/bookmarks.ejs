<%- include('../../partials/header.ejs', user) %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../partials/sidebar.ejs') %>
            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-body my-5">
                            <h5>List Of My bookmarks</h5>
                            <div class="row">
                                <%if(posts.length===0){%>
                                    <div class="text-center text-muted mx-3 my-3">
                                        <p>You don't any bookmarked Any Post</p>
                                    </div>
                                    <% }else{%>
                                        <% for(let post of posts.reverse()){%>
                                            <div class="card col-sm-3 m-3">
                                                <% if(post.thumbnail){%>
                                                    <img src="<%= post.thumbnail %>" alt="<%= post.title %>"
                                                        class="card-img-top mt-3">
                                                    <%} %>
                                                        <div class="card-body p-0 mt-2">
                                                            <a href="/posts/<%= post._id %>"
                                                                style="color:#222; text-decoration: none;">
                                                                <%= post.title %>
                                                            </a>
                                                        </div>
                                            </div>
                                            <%} %>
                                                <%} %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- include('../../partials/footer.ejs') %>


        </body>

        </html>