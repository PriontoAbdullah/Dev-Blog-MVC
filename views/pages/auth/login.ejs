<%- include('../../partials/head.ejs') %>

    <div class="container my-container">
        <div class="row rounded-3 mt-4">
            <div class="col-md-6 offset-md-3 bg-light p-4">
                <form action="/auth/login" method="POST">
                    <h4>Login to Tour Account</h4>
                    <div class="form-group my-3">
                        <label for="email">Enter Your Email</label>
                        <input type="email" name="email" class="form-control mt-2" id="email"
                            placeholder="name@gmail.com">
                    </div>
                    <div class="form-group my-3">
                        <label for="password">Enter Your Password</label>
                        <input type="password" name="password" class="form-control mt-2" id="password"
                            placeholder="Yqye4D&5$u">
                    </div>
                    <button class="w-100 btn btn-primary mt-1" type="submit">Sign Up</button>
                </form>
                <div class="my-3 text-center">
                    <a href="/auth/signup" >Don's have any Account? Create One</a>
                </div>        
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>

        </body>

        </html>