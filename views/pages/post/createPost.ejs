<%- include('../../partials/header.ejs', user) %>

    <div class="container-fluid my-container my-5">
        <div class="row">
            <div class="col-md-2">Sidebar</div>

            <div class="col-md-10">
                <div class="mx-5 card card-body">
                    <h5 class="my-3">Create New Post</h5>
                    <form action="/posts/create" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Enter Your Post Title</label>
                            <input type="text" name="title" id="title"
                                class="form-control <%= error.title ? 'is-invalid': '' %> "
                                value="<%= value.title ? value.title: '' %>">
                            <div class="invalid-feedback">
                                <%= error.title %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tiny-mce-post-body">Enter your Post Body</label>
                            <textarea name="body" id="tiny-mce-post-body"
                                class="form-control <%= error.body ? 'is-invalid': '' %>"><%=value.body ? value.body:'' %> </textarea>
                            <div class="invalid-feedback">
                                <%= error.body %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tags">Enter Some Tags (Max 10)</label>
                            <input type="text" name="tags" id="tags" placeholder="tag1, tag2, tag3" class="form-control"
                                value="<%= value.tags ? value.tags: '' %>">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" name="post-thumbnail" class="custom-file-input" id="inputGroupFile">
                                <label for="inputGroupFile" class="custom-file-label">Choose File</label>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Create Post">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>
    <script src="https://cdn.tiny.cloud/1/m5551muwxc07cwoso1ymfohh9z9s562x1k28j62zqfmr9pfg/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="/scripts/tinymce.js"></script>

        <script>
            $('#inputGroupFile').on('change', function (e) {
                let filename = e.target.files[0].name
                $(this).next('.custom-file-label').html(filename)
            })
        </script>

        </body>

        </html>